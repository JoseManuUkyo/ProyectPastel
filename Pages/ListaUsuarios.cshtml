@page
@model ListaUsuariosModel
@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-4">
    <h2>Lista de Usuarios</h2>

    <!-- Formulario de bÃºsqueda -->
    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" asp-for="Busqueda" class="form-control" placeholder="Buscar por nombre">
            <button type="submit" class="btn btn-primary">Buscar</button>
            <a href="@Url.Page("/ListaUsuarios")" class="btn btn-secondary">Limpiar</a>
        </div>
    </form>

    <!-- Tabla de usuarios -->
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Tipo</th>
                <th>Fecha Registro</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model.Usuarios)
            {
                <tr>
                    <td>@usuario.id_usuario</td>
                    <td>@usuario.nombre</td>
                    <td>@usuario.correo</td>
                    <td>@usuario.tipo_usuario</td>
                    <td>@if (usuario.fecha_registro.HasValue)
                    {
                        @usuario.fecha_registro.Value.ToString("dd/MM/yyyy")
                    }else{
                        <text>N/A</text>
                    }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>